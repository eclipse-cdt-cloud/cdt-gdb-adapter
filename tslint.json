{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "align": [
      true,
      "statements",
      "members",
      "elements"
    ],
    "interface-name": false,
    "no-empty-interface": false,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [
      true,
      "single",
      "avoid-template",
      "avoid-escape"
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "never"
      }
    ]
  }
}
